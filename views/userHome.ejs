<script type='text/javascript'>
    let firstName = "<%= firstName %>";
    let lastName = "<%= lastName %>";
    let username = "<%= user.username %>";
    // console.log(username);
    let rowSelected, picPath;
    let table = $("#dataDisplay").DataTable();
    let UserRole = "<%= user.userrole %>";
    let transactionID = [];
    let LayerNameStr = [];
    let queryStr;

    $(document).ready(function() {

        $(function () {

            flatpickr(".date", {
                dateFormat: "Y-m-d",
                time_24hr: true
            });

            table.clear();
            table.draw();

            if (UserRole === "Regular") {
                document.getElementById('searchname').style.display = "none"; //disables username search for regular members
                queryStr = "Current_Status=Pending&UID=" + username;
            } else {
                queryStr = "Current_Status=Pending";
            }
            console.log(queryStr);
            queryAndDisplay(queryStr);
            //the console below refers to the above as querystr
            // just for the Pending table
            //By changing this we allow the initial table to only show pending records
            //We change to UID b/c of column name in Layer_Request form table

        });

        $('#dataDisplay tbody').on('click', 'tr', function () {
            transactionID = [];
            picPath = [];
            $(this).toggleClass('selected');    //toggle class for the rows selected
            // $(this).toggleClass('change');   //toggle class change color
            // changeColor();

            rowSelected = table.rows('.selected').data();    //Store all the data for selected rows'

            // $('#dataDisplay > thead > tr > th').each(function () {
            //     thArray.push($(this).text())
            // })

            for (let i = 0; i < rowSelected.length; i++) {
//                console.log("rowSelected[" + i + "][0]: " + rowSelected[i][0]);
                transactionID.push(rowSelected[i][2]); //object variable / push means insert this value into ScoutingID
                picPath.push(rowSelected[i][15]);
                LayerNameStr.push(rowSelected[i][11]);
            }
        });

        $("#editButton").on("click", function () {
            // console.log(transactionID);
            if (transactionID.length >= 2) {
                confirm("Please make sure to only select ONE entry to edit.")
            } else if (transactionID.length === 0) {
                confirm("No rows have been selected ---- please choose ONE.")
            } else {
                // let transactionIDStr = "transactionIDStr=" + transactionID.toString();
                let rowSelectedValue = table.rows('.selected').data();
                localStorage.setItem("rowSelectedValue", JSON.stringify(rowSelectedValue[0]));
                window.location.replace('/editdata');
                // console.log(localStorage.getItem("rowSelectedValue"));
            }
        });

        $("#deleteButton").on("click", function () {
            if (confirm("Are you sure you would like to trashfolder the row(s) you selected?") === true) {
                // console.log(transactionID); //provides the associated values of the element(record) in the array

                let transactionIDStr = "transactionIDStr=" + transactionID.toString();//combines Scouting ID with the trapID
                console.log(transactionIDStr);
                let pictureStr = "pictureStr=" + picPath.toString();
                let LayerName = "LayerName=" + LayerNameStr.toString();
                console.log(transactionIDStr + '&' + pictureStr + '&' + LayerName);
                $.ajax({
                    url: '/deleteData',
                    type: "GET",
                    dataType: 'json',
                    data: transactionIDStr + '&' + pictureStr + '&' + LayerName,
                    success: function (result) {
                        console.log(result);
                        window.location.reload();
                    }
                });


            } else {
                return false;

            }
        });

        $("#showButton").on("click", function () {
            let qStr;
            table.clear();
            table.draw();
            // queryAndDisplay(hjkhjkhk);
            $(".clearForm input[type='text']").val('');
            $(".filter").val(''); //no function here so button does nothing
            $(".date").val('');

            if (UserRole === "Regular") {
                document.getElementById('searchname').style.display = "none"; //disables username search for regular members
                qStr = "UID=" + username;
            } else {
                qStr = "";//this line is for the admin, who does not need to only see a specific UID, but all records
            }

            // let qStr = "UID=" + username;
             //must be blank so you can get everyone's records and then the filters down below will distinguish between approved, pending, and deleted records
            //still keep UID because it is a changing variable whereas the first two are constant
            // console.log(table.clear);
            // console.log(qStr);
            queryAndDisplay(qStr);
        });
    });

    function dropDown() {
        console.log(UserRole);
        if (UserRole === "Admin") {
            document.getElementById("userMenuAdmin").classList.toggle("show");
        } else if (UserRole === "Regular") {
            document.getElementById("userMenuRegular").classList.toggle("show");
        }
    }
    window.onclick = function(event) {
        if (!event.target.matches('.dropbutton')) {
            let dropdowns = document.getElementsByClassName("dropdown-content");
            for (let i = 0; i < dropdowns.length; i++) {
                let openDropdown = dropdowns[i];
                if (openDropdown.classList.contains('show')) {
                    openDropdown.classList.remove('show');
                }
            }
        }
    }

    function query() {
        let firstName = document.getElementById("firstName").value;
        let lastName = document.getElementById("lastName").value;
        let startDate = document.getElementsByClassName("date")[0].value;
        let endDate = document.getElementsByClassName("date")[1].value;

        queryStr = "firstName=" + firstName + "&lastName=" + lastName + "&startDate=" + startDate + "&endDate=" + endDate;
//This queryStr is for the admin's filtering options, that's why you need first and last names
        table.clear();
        table.draw();
        // trapTable.clear();
        // trapTable.draw();
        queryAndDisplay(queryStr);
    }

    let queryAndDisplay = function (query) {
        $.ajax({
            url: '/layerReqQuery',
            type: 'GET',
            dataType: 'json',
            async: false,
            data: query, //status="active or pending" & username=@ after deleting records, you reload table which shows a new output not including the deleted records - it's still an instance of filtering
            success: function (results) {
                console.log(results);
                if (results.errMsg === "no data") {
                    alert("You currently have no pending data entries!");//this right here will let users know that they currently have no pending records;
                    //clarifies that it is not an error
                    table.draw();
                } else if (results.errMsg === "fail") {
                    alert("There is query error!");//this right here will let users know there is an query error;
                    table.draw();
                } else {
                    for (let i = 0; i < results.length; i++) {

                        if (results[i].Current_Status === "Pending" || results[i].Current_Status === "Approved" || results[i].Current_Status === "Rejected") {

                            table.row.add([
                                results[i].Date,
                                results[i].UID,
                                results[i].RID,
                                results[i].LayerCategory,
                                results[i].ContinentName,
                                results[i].CountryName,
                                results[i].StateName,
                                results[i].CityName,
                                results[i].FirstLayer,
                                results[i].FirstOther,
                                results[i].SecondLayer,
                                results[i].SecondOther,
                                results[i].ThirdLayer,
                                results[i].Layer_Description,
                                results[i].LayerFormat,
                                results[i].Layer_Uploader_name,
                                results[i].Current_Status,
                                results[i].Comments
                            ]).draw(false);
                        }
                        //start a new set of if statements for the admin here

                    }
                }

            }
        })
    }

</script>
