<script type='text/javascript'>
    var dtstring = "";
    var rowSelected = [];
    var table = $("#dataDisplay").DataTable();
    var trapTable = $("#trapDisplay").DataTable();
    var UserRole = "<%= user.userrole %>";
    var DropMenu;
    var d;
    var transactionID = [];
    var picturename = []
    var priorStatus = []
    var layerName = [];


    $(document).ready(function(){

        $(function () {
            flatpickr(".date", {
                dateFormat: "Y-m-d",
                time_24hr: true
            });

            if (UserRole === "Admin") {
                DropMenu = "<li><a href=\"/userprofile\">Profile</a></li>\n" +
                    "\t\t\t<li><a href=\"/userManagement\">User Management</a></li>\n" +
                    "\t\t\t<li><a href=\"/signout\">Sign Out</a></li>";
                $("#userMenu").empty();
                $("#userMenu").append(DropMenu)
            } else if (UserRole === "Regular") {
                DropMenu = "<li><a href=\"/userprofile\">Profile</a></li>\n" +
                    "\t\t\t<li><a href=\"/signout\">Sign Out</a></li>";
                $("#userMenu").empty();
                $("#userMenu").append(DropMenu)
            }

            table.clear();
            table.draw();

            // if (UserRole === "Regular") {
            //     // document.getElementById('searchname').style.display = "none"; //disables username search for regular members
            //     queryStr = "Current_Status=Pending&UID=" + username;
            // } else {
            //     queryStr = "Current_Status=Pending";//this line is for the admin, who does not need to only see a specific UID, but all records
            // }
            // console.log(queryStr);
            // queryAndDisplay(queryStr);
            trapTable.clear();
            trapTable.draw();
            <!--queryAndDisplay("statusDel=" + "Deleted" + "&firstName=" + "<%= firstName %>" + "&lastName=" + "<%= lastName %>");-->

            queryAndDisplay();//this is client
            //got rid of the string b/c AddData will not process any query string b/c will return all records and will be filtered by clientside downstairs
            console.log()

        });

        $('#dataDisplay tbody').on('click', 'tr', function () {
            console.log('hello')

            if ($(this).hasClass('selected')) { //if the row is selected already
                $(this).removeClass('selected');//unselect it
                d = table.row(this).data();
                var index = transactionID.indexOf(d[0]); //delete the transactionID in the array
                transactionID.splice(index, 1);
            } else {
                $(this).addClass('selected');

                d = table.row(this).data();
                d.counter++;
                table.row(this).data(d).draw();
                console.log(d[1])

                console.log(d);
                priorStatus.push(d[13])
                layerName.push(d[8]);
                transactionID.push(d[1]);
                picturename.push(d[11]);

                var thArray = [];

                $('#dataDisplay > thead > tr > th').each(function () {
                    thArray.push($(this).text())
                })
                console.log(thArray);

                for (var i = 0; i < thArray.length; i++) {
                    rowSelected[i] = {};
                    rowSelected[i].Name = thArray[i];
                    rowSelected[i].Value = d[i];
                }
            }
        });

        $("#recoverButton").on("click", function () {

            if (confirm("Are you sure you would like to recover this row(s)?") === true) {
                console.log(priorStatus)

                var transactionIDStr = "transactionIDStr=";
                var transactionPrStatusStr = "transactionStatusStr="
                var layerNameStr = "layerName="
                for (var i = 0; i < transactionID.length; i++) {
                    //update the status to pending
                    //move file from trash folder to upload files.
                    transactionIDStr += transactionID[i] + ",";
                    transactionPrStatusStr += priorStatus[i] + ",";
                    layerNameStr += layerName[i]+ ",";

                    if (i === transactionID.length - 1) { //delete the , at the end of the string
                        transactionIDStr = transactionIDStr.substring(0, transactionIDStr.length - 1);
                        transactionPrStatusStr = transactionPrStatusStr.substring(0, transactionPrStatusStr.length - 1);
                        layerNameStr = layerNameStr.substring(0,layerNameStr.length - 1);
                        update();
                    }
                }
                function update() {
                    var pictureStr = "pictureStr=" + picturename.toString();
                    console.log(pictureStr);
                    $.ajax({
                        url: '/recoverRow',
                        type: 'GET',
                        dataType: 'json',
                        async: false,
                        data: transactionIDStr + '&' + pictureStr+ '&' + transactionPrStatusStr + '&' + layerNameStr,
                        success: function (result) {
                            window.location.replace('/userHome')
                        }
                    })
                }
            } else {
                return false;
            }
        });
    });

        var username = "<%= user.username %>";

    var queryAndDisplay = function (querystr) {
        $.ajax({
            url: '/AddData',
            dataType: 'json',
            data: querystr,
            success: function (results) {
                console.log(results);
                for (var i = 0; i < results.length; i++) {
                    if (results[i].Current_Status === "Delete") {
                        if (UserRole === "Regular") {
                            if (results[i].UID === username) {
                                table.row.add([
                                    results[i].UID,
                                    results[i].RID,
                                    results[i].LayerCategory,
                                    results[i].StateName,
                                    results[i].CountryName,
                                    results[i].CityName,
                                    results[i].FirstLayer,
                                    results[i].SecondLayer,
                                    results[i].ThirdLayer,
                                    results[i].Layer_Description,
                                    results[i].Layer_Uploader,
                                    results[i].Layer_Uploader_name,
                                    results[i].Current_Status,
                                    results[i].Prior_Status
                                ]).draw(false);
                            }
                        } else {
                            table.row.add([
                                results[i].UID,
                                results[i].RID,
                                results[i].LayerCategory,
                                results[i].StateName,
                                results[i].CountryName,
                                results[i].CityName,
                                results[i].FirstLayer,
                                results[i].SecondLayer,
                                results[i].ThirdLayer,
                                results[i].Layer_Description,
                                results[i].Layer_Uploader,
                                results[i].Layer_Uploader_name,
                                results[i].Current_Status,
                                results[i].Prior_Status
                            ]).draw(false);
                        }
                    }
                }
            }
        })
    }

</script>
